<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActionBarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_activity_background</item>
    </style>


    <style name="CropTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>


    <style name="dialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBlueApp</item>
        <item name="android:windowBackground">@color/actionBarColor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="alertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBlueApp</item>
        <item name="android:windowBackground">@color/actionBarColor</item>
        <item name="android:textSize">16sp</item>

    </style>


    <style name="progressStyle" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBlueApp</item>
    </style>


    <style name="editLayoutStyle" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBlueApp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
